pipeline {
    agent any
    environment {
        BUILD_VERSION = "Build_${BUILD_NUMBER}"
    }
    stages {
        stage('SCM checkout') {
            steps {
                script {
                    // Clone the Git repository
                   checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'token', url: 'https://github.com/vinuthapra/spring-boot-maven-demo.git']]])

                    // Update the commit message
                    sh "git checkout -b ${BUILD_VERSION}"
                    sh "git commit --amend -m 'Build number: ${BUILD_NUMBER}'"
                    sh "git push origin ${BUILD_VERSION}"
                }
            }
        }
        stage('Build') {
            steps {
                sh 'mvn compile'
                sh 'mvn clean'
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Copy Jars') {
            steps {
                sh "mkdir ${BUILD_VERSION}"
                sh "cp target/demo-0.0.1-SNAPSHOT.jar ${BUILD_VERSION}"
            }
        }
    }
}
