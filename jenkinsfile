pipeline {
    agent any
    environment {
        BUILD_VERSION = "Build_${BUILD_NUMBER}"
    }
    stages {
        stage('SCM checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          extensions: [[$class: 'ChangelogToWorkspace']]])
                script {
                    bat "git tag -a ${env.BUILD_VERSION} -m 'Build number: ${env.BUILD_NUMBER}'"
                    bat "git push origin ${env.BUILD_VERSION}"
                }
            }
        }
        stage('Build') {
            steps {
                bat 'mvn compile'
                bat 'mvn clean'
                bat 'mvn clean package -DskipTests'
            }
        }
        stage('Copy Jars') {
            steps {
                bat "mkdir ${env.BUILD_VERSION}"
                bat "copy target/demo-0.0.1-SNAPSHOT.jar ${env.BUILD_VERSION}"
            }
        }
    }
}
