pipeline {
    agent any
    stages {
        stage('Example') {
            steps {
                // Move into the 'target' directory
                dir('target') {
                    // Create a new directory 'Build_44'
                    bat 'mkdir Build_44'
                    // Copy 'demo-0.0.1-SNAPSHOT.jar' into the 'Build_44' directory
                    bat 'copy demo-0.0.1-SNAPSHOT.jar Build_44/'
                }
            }
        }
    }
}
